---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Get a Quote',
  description: 'Request a custom quote from Al Mauna Trading for wholesale and retail food distribution solutions.',
  image: '/src/assets/images/home/home-1.png',
};

const baseUrl = process.env.SITE_URL ?? 'https://example.com';
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  url: `${baseUrl}/get-a-quote`,
  name: metadata.title,
  description: metadata.description,
};
---

<Layout metadata={metadata}>
  <main>
    <script type='application/ld+json' set:html={JSON.stringify(structuredData)} />
    <section class='bg-gradient-secondary pt-[64px] pb-[120px]'>
      <div class='max-w-5xl mx-auto px-6'>
        <h2
          class='text-center text-[32px] text-gradient font-bold intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
        >
          Get a quote
        </h2>
        <p
          class='text-center text-[20px] pt-2 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
        >
          Fill in the form to receive a custom quote from our experts.
        </p>

        <form
          class='max-w-md mx-auto pt-[40px] space-y-2 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
        >
          <input
            type='text'
            placeholder='Full name'
            class='w-full px-4 py-3 focus:outline-none border border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50'
          />

          <input
            type='text'
            placeholder='Company name'
            class='w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50'
          />

          <input
            type='email'
            placeholder='E-mail'
            class='w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50'
          />

          <input
            type='text'
            placeholder='Phone number / WhatsApp'
            class='w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50'
          />

          <input
            type='text'
            placeholder='Country'
            class='w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50'
          />

          <select
            class='w-full px-2 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] text-black text-opacity-50'
          >
            <option>Monthly Requirement</option>
            <option>Weekly Requirement</option>
            <option>Daily Requirement</option>
          </select>

          <input
            type='text'
            placeholder='Delivery Location'
            class='w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50'
          />

          <textarea
            placeholder='Message'
            rows='5'
            class='w-full px-4 py-3 border focus:outline-none border-gradient-secondary rounded-[8px] placeholder:text-black placeholder:opacity-50'
          ></textarea>

          <div class='flex justify-center pt-[32px]'>
            <button
              type='submit'
              class='px-8 py-3 rounded-[32px] focus:outline-none text-white font-bold text-[16px] bg-gradient-primary shadow-md hover:opacity-90'
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </section>
  </main>
</Layout>
