---
import Layout from '~/layouts/PageLayout.astro';
import HeroCarousel from '~/components/widgets/HeroCarousel.astro';
import ProductsCarousel from '~/components/widgets/ProductsCarousel.astro';
import CustomerCarousel from '~/components/widgets/CustomerCarousel.astro';
import Image from 'astro/components/Image.astro';

const metadata = {
  title: 'Al mauna',
  ignoreTitleTemplate: true,
  description:
    'Al Mauna Trading â€” quality sourcing, reliable distribution and customer-focused wholesale solutions across Qatar and the UAE.',
  image: '/src/assets/images/home/home-1.png',
};

const baseUrl = process.env.SITE_URL ?? 'https://example.com';
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  url: `${baseUrl}/`,
  name: metadata.title,
  description: metadata.description,
  publisher: {
    '@type': 'Organization',
    name: 'Al Mauna Trading',
  },
};

const homeData = [
  {
    img: '/src/assets/images/home/home-1.png',
    title: 'Quality sourcing',
    desc: 'Diverse selection of high-quality products from leading international brands.',
  },
  {
    img: '/src/assets/images/home/home-2.png',
    title: 'Affordability & value',
    desc: 'Premium taste, accessible prices.',
  },
  {
    img: '/src/assets/images/home/home-3.png',
    title: 'Reliable distribution',
    desc: 'Seamless supply chain for wholesale & retail, strengthened by our key logistics hub in Dubai.',
  },
  {
    img: '/src/assets/images/home/home-4.png',
    title: 'Customer focus',
    desc: 'Dedicated service tailored to your needs.',
  },
];
---

<Layout metadata={metadata}>
  <script type='application/ld+json' set:html={JSON.stringify(structuredData)} />
  <HeroCarousel />
  <section class='py-[96px] bg-gradient-secondary'>
    <div class='md:max-w-6xl mx-auto px-[32px] md:px-6'>
      <h1
        class='text-[32px] font-bold text-gradient text-center intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
      >
        At Al Mauna Trading, we go beyond distribution.
      </h1>
      <p
        class='text-[20px] text-center pt-[16px] intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
      >
        We are passionate about enriching the culinary experiences in Qatar and the UAE. Since 2016, our commitment to
        quality, value, and service has been empowered by our strategic hubs, including our dynamic <a
          class='text-[#B32482] underline font-bold'
          href='/dubai-branch'>Dubai Branch</a
        > for efficient distribution.
      </p>
      <div class='flex justify-center items-center md:mt-[48px] mt-[64px]'>
        <a
          href='/about'
          class='bg-gradient-primary py-[16px] px-[32px] shadow-primary rounded-[32px] text-white font-bold text-[16px] intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
          >Learn More About Us</a
        >
      </div>
    </div>
  </section>
  <section class='py-[64px] border-b border-opacity-[10%]'>
    <div class='max-w-6xl mx-auto px-6'>
      <h1
        class='text-[32px] font-bold text-gradient text-center intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
      >
        Taste the world's finest brands
      </h1>
      <p
        class='text-[20px] text-center pt-[8px] intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
      >
        We offer a diverse range of expertly sourced foods curated for quality and taste.
      </p>
    </div>
  </section>
  <section class='py-[64px]'>
    <ProductsCarousel />
  </section>

  <section class='py-[64px] bg-gradient-secondary md:block hidden'>
    <div class='max-w-6xl mx-auto px-6'>
      <h1 class='text-[32px] font-bold text-gradient text-center'>Craving more delicious discoveries?</h1>
      <p class='text-[20px] text-center pt-[8px]'>
        From daily staples to gourmet delights, our selection is truly diverse.
      </p>
      <div class='flex justify-center items-center mt-[48px]'>
        <a
          href='/brands?brand=maharani'
          class='bg-gradient-primary py-[16px] px-[32px] shadow-primary rounded-[32px] text-white font-bold text-[16px]'
          >Browse Our Entire Collection</a
        >
      </div>
    </div>
  </section>

  <section
    class='py-[64px]'
    style={{
      backgroundImage: 'url(/src/assets/images/violet-bg.svg)',
      backgroundRepeat: 'no-repeat',
      backgroundSize: 'cover',
      backgroundPosition: 'center',
    }}
  >
    <div class='max-w-6xl mx-auto px-6'>
      <div class='flex flex-col items-center'>
        <h1
          class='text-[32px] font-bold text-gradient-secondary text-center intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
        >
          Experience the Al Mauna difference.
        </h1>
        <p
          class='text-[20px] pt-[16px] md:pt-2 text-[#F6E9F2] text-center intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade'
        >
          Here, diverse quality meets accessible prices and dedicated service, from our global network to you.
        </p>
      </div>

      <div class='grid grid-cols-1 md:grid-cols-4 gap-[48px] md:gap-[32px] mt-[64px]'>
        {
          homeData.map((item) => (
            <div>
              <div class='flex relative items-center justify-center'>
                <div class='bg-gradient-tertiary rotate-[45deg] h-[80px] w-[80px] rounded-[8px]' />
                <Image
                  src={item.img}
                  height={111}
                  width={96}
                  class='w-[110px] h-[111px] absolute object-center object-cover'
                  alt={item.title}
                />
              </div>

              <h1 class='text-[16px] font-bold text-gradient-secondary text-center pt-[46px]'>{item.title}</h1>

              <p class='text-[14px] text-[#F6E9F2] text-center pt-1'>{item.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <CustomerCarousel />
</Layout>
